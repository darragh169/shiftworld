<?xml version="1.0"?>
<sprite>
    <imageset name="base" src="sprites/monsters/beetle.png" width="48" height="48" offsetY="16" />
    <imageset name="death" src="sprites/monsters/beetle_death.png" width="48" height="48" offsetY="16" />

    <action name="stand" imageset="base">
        <animation direction="down">
            <frame index="1" />
        </animation>
        <animation direction="up">
            <frame index="6" />
        </animation>
        <animation direction="right">
            <frame index="11" />
        </animation>
        <animation direction="left">
            <frame index="16" />
        </animation>
    </action>
    <action name="walk" imageset="base">
        <animation direction="down">
            <sequence start="0" end="3" delay="150" />
        </animation>
        <animation direction="up">
            <sequence start="5" end="7" delay="150" />
        </animation>
        <animation direction="right">
            <sequence start="10" end="12" delay="150" />
        </animation>
        <animation direction="left">
            <sequence start="15" end="17" delay="150" />
        </animation>
    </action>
    <action name="attack" imageset="base">
        <animation direction="down">
            <sequence start="4" end="5" delay="150" />
            <end />
        </animation>
        <animation direction="up">
            <sequence start="7" end="9" delay="150" />
            <end />
        </animation>
        <animation direction="right">
            <sequence start="12" end="14" delay="150" />
            <end />
        </animation>
        <animation direction="left">
            <sequence start="17" end="19" delay="150" />
            <end />
        </animation>
    </action>
    <action name="dead" imageset="death">
        <animation direction="down">
            <frame index="0" delay="-1" />
        </animation>
        <animation direction="up">
            <frame index="1" delay="-1" />
        </animation>
        <animation direction="right">
            <frame index="2" delay="-1" />
        </animation>
        <animation direction="left">
            <frame index="3" delay="-1" />
        </animation>
    </action>
</sprite>
