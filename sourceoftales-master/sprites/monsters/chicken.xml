<?xml version="1.0"?>
<sprite>
    <imageset name="base" src="sprites/monsters/chicken_walkcycle.png"
        width="32"
        height="32"
        offsetY="8" />
    <imageset name="pick" src="sprites/monsters/chicken_pick.png"
        width="32"
        height="32"
        offsetY="8" />
    <imageset name="death" src="sprites/monsters/chicken_death.png"
        width="32"
        height="32"
        offsetY="8" />
    <action name="stand" imageset="pick">
        <animation direction="up">
            <frame index="0" delay="300" />
            <frame index="1" delay="75" />
            <frame index="2" delay="75" />
            <frame index="3" delay="75" />
            <frame index="0" delay="500" />
            <frame index="1" delay="75" />
            <frame index="2" delay="75" />
            <frame index="3" delay="75" />
            <frame index="0" delay="500" />
        </animation>
        <animation direction="left">
            <frame index="4" delay="300" />
            <frame index="5" delay="75" />
            <frame index="6" delay="75" />
            <frame index="7" delay="75" />
            <frame index="4" delay="500" />
            <frame index="5" delay="75" />
            <frame index="6" delay="75" />
            <frame index="7" delay="75" />
            <frame index="4" delay="500" />
        </animation>
        <animation direction="down">
            <frame index="8" delay="300" />
            <frame index="9" delay="75" />
            <frame index="10" delay="75" />
            <frame index="11" delay="75" />
            <frame index="8" delay="500" />
            <frame index="9" delay="75" />
            <frame index="10" delay="75" />
            <frame index="11" delay="75" />
            <frame index="8" delay="500" />
        </animation>
        <animation direction="right">
            <frame index="12" delay="300" />
            <frame index="13" delay="75" />
            <frame index="14" delay="75" />
            <frame index="15" delay="75" />
            <frame index="12" delay="500" />
            <frame index="13" delay="75" />
            <frame index="14" delay="75" />
            <frame index="15" delay="75" />
            <frame index="12" delay="500" />
        </animation>
    </action>
    <action name="walk" imageset="base">
        <animation direction="up">
            <frame index="0" delay="75" />
            <frame index="1" delay="75" />
            <frame index="2" delay="75" />
            <frame index="3" delay="75" />
        </animation>
        <animation direction="left">
            <frame index="4" delay="75" />
            <frame index="5" delay="75" />
            <frame index="6" delay="75" />
            <frame index="7" delay="75" />
        </animation>
        <animation direction="down">
            <frame index="8" delay="75" />
            <frame index="9" delay="75" />
            <frame index="10" delay="75" />
            <frame index="11" delay="75" />
        </animation>
        <animation direction="right">
            <frame index="12" delay="75" />
            <frame index="13" delay="75" />
            <frame index="14" delay="75" />
            <frame index="15" delay="75" />
        </animation>
    </action>
    <action name="attack" imageset="pick">
        <animation direction="up">
            <frame index="0" delay="75" />
            <frame index="1" delay="75" />
            <frame index="2" delay="75" />
            <frame index="3" delay="75" />
            <end />
        </animation>
        <animation direction="left">
            <frame index="4" delay="75" />
            <frame index="5" delay="75" />
            <frame index="6" delay="75" />
            <frame index="7" delay="75" />
            <end />
        </animation>
        <animation direction="down">
            <frame index="8" delay="75" />
            <frame index="9" delay="75" />
            <frame index="10" delay="75" />
            <frame index="11" delay="75" />
            <end />
        </animation>
        <animation direction="right">
            <frame index="12" delay="75" />
            <frame index="13" delay="75" />
            <frame index="14" delay="75" />
            <frame index="15" delay="75" />
            <end />
        </animation>
    </action>
    <action name="dead" imageset="death">
        <animation direction="up">
            <sequence start="0" end="3" delay="75" />
            <frame index="4" delay="-1" />
        </animation>
        <animation direction="left">
            <sequence start="5" end="8" delay="75" />
            <frame index="9" delay="-1" />
        </animation>
        <animation direction="down">
            <sequence start="10" end="13" delay="75" />
            <frame index="14" delay="-1" />
        </animation>
        <animation direction="right">
            <sequence start="15" end="18" delay="75" />
            <frame index="19" delay="-1" />
        </animation>
    </action>
</sprite>
