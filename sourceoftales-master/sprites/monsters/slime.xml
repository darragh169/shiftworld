<?xml version="1.0"?>
<sprite>
    <imageset name="base" src="sprites/monsters/slime.png"
        width="32"
        height="32"
        offsetY="8" />
    <imageset name="death" src="sprites/monsters/slime_death.png"
        width="32"
        height="32"
        offsetY="8" />
    <action name="stand" imageset="base">
        <animation direction="up">
            <frame index="0" delay="150" />
            <frame index="1" delay="150" />
            <frame index="2" delay="150" />
            <frame index="1" delay="150" />
        </animation>
        <animation direction="left">
            <frame index="3" delay="150" />
            <frame index="4" delay="150" />
            <frame index="5" delay="150" />
            <frame index="4" delay="150" />
        </animation>
        <animation direction="down">
            <frame index="6" delay="150" />
            <frame index="7" delay="150" />
            <frame index="8" delay="150" />
            <frame index="7" delay="150" />
        </animation>
        <animation direction="right">
            <frame index="9" delay="150" />
            <frame index="10" delay="150" />
            <frame index="11" delay="150" />
            <frame index="10" delay="150" />
        </animation>
    </action>
    <action name="attack" imageset="base">
        <animation direction="up">
            <frame index="0" offsetY="-2" delay="100" />
            <frame index="0" offsetY="-4" delay="100" />
            <frame index="0" offsetY="-8" delay="100" />
            <frame index="0" offsetY="-4" delay="100" />
            <frame index="0" offsetY="-2" delay="100" />
            <end />
        </animation>
        <animation direction="left">
            <frame index="3" offsetX="-2" delay="100" />
            <frame index="3" offsetX="-4" delay="100" />
            <frame index="3" offsetX="-8" delay="100" />
            <frame index="3" offsetX="-4" delay="100" />
            <frame index="3" offsetX="-2" delay="100" />
            <end />
        </animation>
        <animation direction="down">
            <frame index="6" offsetY="2" delay="100" />
            <frame index="6" offsetY="4" delay="100" />
            <frame index="6" offsetY="8" delay="100" />
            <frame index="6" offsetY="4" delay="100" />
            <frame index="6" offsetY="2" delay="100" />
            <end />
        </animation>
        <animation direction="right">
            <frame index="9" offsetX="2" delay="100" />
            <frame index="9" offsetX="4" delay="100" />
            <frame index="9" offsetX="8" delay="100" />
            <frame index="9" offsetX="4" delay="100" />
            <frame index="9" offsetX="2" delay="100" />
            <end />
        </animation>
    </action>
    <action name="dead" imageset="death">
        <animation direction="up">
            <sequence start="0" end="3" delay="100" />
            <frame index="4" delay="-1" />
        </animation>
        <animation direction="left">
            <sequence start="5" end="8" delay="100" />
            <frame index="9" delay="-1" />
        </animation>
        <animation direction="down">
            <sequence start="10" end="13" delay="100" />
            <frame index="14" delay="-1" />
        </animation>
        <animation direction="right">
            <sequence start="15" end="18" delay="100" />
            <frame index="19" delay="-1" />
        </animation>
    </action>
</sprite>
